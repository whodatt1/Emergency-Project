<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <Property name="LOG_PATH">logs</Property>
        <Property name="PATTERN">%d{yyyy-MM-dd HH:mm:ss.SSS} %-5p [%c{1}] : %m%n</Property>
    </Properties>

    <Appenders>
        <!-- 운영용 파일 로그 -->
        <RollingFile name="RollingFileAppender"
                     fileName="${LOG_PATH}/app.log"
                     filePattern="${LOG_PATH}/app-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout pattern="${PATTERN}"/>
            <Policies>
                <!-- 파일 하나가 50MB 넘으면 롤링 -->
                <SizeBasedTriggeringPolicy size="50MB"/>
                <!-- 하루 단위로 새 파일 생성 -->
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
            <!-- 최대 7개 파일만 유지 -->
            <DefaultRolloverStrategy max="7"/>
        </RollingFile>

        <!-- 에러 전용 로그 -->
        <RollingFile name="ErrorFileAppender"
                     fileName="${LOG_PATH}/error.log"
                     filePattern="${LOG_PATH}/error-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout pattern="${PATTERN}"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="50MB"/>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
            <DefaultRolloverStrategy max="7"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <!-- Root 로그: WARN 이상만 기록 -->
        <Root level="WARN" additivity="false">
            <AppenderRef ref="RollingFileAppender"/>
            <AppenderRef ref="ErrorFileAppender" level="ERROR"/>
        </Root>

        <!-- Spring 로그: INFO 수준만 기록 -->
        <Logger name="org.springframework" level="WARN" additivity="false">
            <AppenderRef ref="RollingFileAppender"/>
        </Logger>

        <!-- 사용자 패키지 로그 -->
        <Logger name="kr.hwangkyun.project" level="WARN" additivity="false">
            <AppenderRef ref="RollingFileAppender"/>
        </Logger>

        <!-- JDBC 로그: 최소화 -->
        <Logger name="jdbc.sqlonly" level="ERROR" additivity="false">
            <AppenderRef ref="RollingFileAppender"/>
        </Logger>
        <Logger name="jdbc.sqltiming" level="ERROR" additivity="false">
            <AppenderRef ref="RollingFileAppender"/>
        </Logger>
        <Logger name="jdbc.resultsettable" level="OFF" additivity="false"/>
        <Logger name="jdbc.audit" level="ERROR" additivity="false"/>
    </Loggers>
</Configuration>
